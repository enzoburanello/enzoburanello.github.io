import Cursor from "../components/Cursor.astro";
import { motion } from "framer-motion"
import Title from "../components/title"
import Cards from "../components/CardList"
import Ask from "../components/AskContact"
import Start from "../components/FirstTitle"

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Sansita:ital,wght@0,400;0,700;0,800;0,900;1,400;1,700;1,800;1,900&display=swap"
			rel="stylesheet"
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Sansita:ital,wght@0,400;0,700;0,800;0,900;1,400;1,700;1,800;1,900&display=swap" rel="stylesheet">

		<meta name="viewport" content="width=device-width" />
		<title>Home</title>
	</head>
	<body class="bg-gray-50">
		

		<content class="">
			<Header />
		
		<main class=" h-full flex flex-col justify-center  items-center px-60  gap-80">

			<div class="h-screen">

				<Start/>

			</div>
				


			<Title client:load/>
					
		
			<Cards/>

			<article class="w-full pb-60">

				<div class="flex flex-col justify-start items-start">
					<Ask client:load/>

					<button class="flex justify-center items-center border-2 py-3 px-8 rounded-xl border-black font-poppins mt-10 font-medium"><a href="">Contact-me</a></button>
				</div>
				
				
			</article>
				

			

				<!-- <a href="/workpage/" class="flex justify-center items-center border-2 py-3 px-8 rounded-xl border-black font-poppins mt-10">Take a look</a> -->
		</main>
		
		
		</content>
		
		
	</body>
</html>
